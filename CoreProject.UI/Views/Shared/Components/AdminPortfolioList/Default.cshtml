@model List<PortfolioVM>
@{
    int i = 0;
}
<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Proje Listesi</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                               <th>#</th>
                               <th>Ana Görsel</th>
                                <th> Proje Adı </th>
                                <th> URL </th>
                                <th> Fiyat </th>
                                <th> Tamamlanma Oranı </th>
                                <th> Durum </th>
                            </tr>
                        </thead>
                        <tbody>
                                @foreach (var item in Model)
                                {
                                    i++;
                            <tr>
                               <td>@i</td>
                               
                                    <td> <img src="@item.ImageUrl" /></td>
                                <td> @item.Name </td>
                                <td> @item.ProjectUrl </td>
                                <td> @item.Price </td>
                                <td> @item.Value </td>
                                @if (item.Value==100)
                                    {
                                        <td>
                                            <div class="badge badge-outline-success">Tamamlandı</div>
                                        </td>
                                    }
                               else
                                    {
                                        <td>
                                            <div class="badge badge-outline-warning">Tamamlanmadı</div>
                                        </td>
                                    }
                            </tr>
                                }
                          
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>