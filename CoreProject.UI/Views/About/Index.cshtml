@model AboutVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3>Hakkımda Düzenleme Sayfası</h3>
</div>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>

@using (Html.BeginForm("Index", "About", FormMethod.Post))
{
    
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
    @Html.HiddenFor(x => x.AboutID)
    <br />
    @Html.Label("Başlık")
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <span asp-validation-for="Title" class="text-danger"></span>
    <br />
    @Html.Label("Yaş")
    @Html.TextBoxFor(x => x.Age, new { @class = "form-control" })
    <span asp-validation-for="Age" class="text-danger"></span>
    <br />
    @Html.Label("Mail")
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
    <span asp-validation-for="Mail" class="text-danger"></span>
    <br />
    @Html.Label("Telefon")
    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
    <span asp-validation-for="Phone" class="text-danger"></span>
    <br />
    @Html.Label("Adres")
    @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
    <span asp-validation-for="Address" class="text-danger"></span>
    <br />
    @Html.Label("Görsel Yolu")
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <span asp-validation-for="ImageUrl" class="text-danger"></span>
    <br />
    @Html.Label("Açıklama")
    @Html.TextAreaFor(x => x.Description,10,2, new { @class = "form-control" })
    <span asp-validation-for="Description" class="text-danger"></span>
    <br />
    <button class="btn btn-outline-success">Kaydet</button>

            </div>
        </div>
    </div>
}

