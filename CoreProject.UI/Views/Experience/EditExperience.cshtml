@model ExperienceVM
@{
    ViewData["Title"] = "EditExperience";
    Layout = "~/Views/Main/_AdminLayout.cshtml";
}
<div class="card-header border-0">
    <h3>Deneyim Düzenleme Sayfası</h3>
</div>
@using (Html.BeginForm("EditExperience", "Experience", FormMethod.Post))
{
    @Html.HiddenFor(x=>x.ExprerienceID)
    <br />
    @Html.Label("Deneyim Başlığı")
    @Html.TextBoxFor(x=>x.Name,new{@class="form-control"})
    <br />
    @Html.Label("Tarih Bilgisi")
    @Html.TextBoxFor(x=>x.Date,new{@class="form-control"})
    <br />
    @Html.Label("Resim Yolu ")
    @Html.TextBoxFor(x=>x.ImageUrl,new{@class="form-control"})
    <br />
    @Html.Label("Açıklama ")
    @Html.TextAreaFor(x=>x.Description,10,3,new{@class="form-control"})
    <br />
    <button class="btn btn-outline-success">Güncelle</button>
}
