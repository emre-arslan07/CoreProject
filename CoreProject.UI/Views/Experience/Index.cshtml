@model List<ExperienceVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
    int i = 0;
}

<div class="card-header border-0">
    <h3 class="mb-0">
        Deneyim Listesi    <a href="/Experience/AddExperience/" class="btn btn-outline-primary">Ekle</a>
    </h3>
</div>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">           
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            i++;
                            <tr>
                            <td>@i</td>
                            <td>@item.Name</td>
                            <td>@item.Date</td>
                                <td><a href="/Experience/DeleteExperience/@item.ExprerienceID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Experience/EditExperience/@item.ExprerienceID" class="btn btn-outline-warning">Güncelle</a></td>
                        </tr>
                            
                        }
                       
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
