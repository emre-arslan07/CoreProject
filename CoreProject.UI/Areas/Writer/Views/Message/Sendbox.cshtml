@model List<WriterMessageVM>
@{
    ViewData["Title"] = "Sendbox";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
    int i = 0;
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Giden Kutusu</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Konu</th>
                            <th>Alıcı</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            i++;
                            <tr>
                                <td>@i</td>
                                <td>@item.Subject</td>
                                <td>@item.Receiver</td>
                                <td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>

                                <td><a href="/Writer/Message/SendboxMessageDetails/@item.WriterMessageID" class="btn btn-outline-primary">Detaylar</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

