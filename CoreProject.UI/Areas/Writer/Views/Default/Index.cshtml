@model List<AnnouncementVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
    int i = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyurular</h4>          
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Durum</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            i++;
                            <tr>
                            <td>@i</td>
                            <td>@item.Title</td>
                            <td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>
                            @if (item.Status==true)
                                {
                                    <td><label class="badge badge-success">Aktif</label></td>

                                }
                                else
                                {
                                    <td><label class="badge badge-danger">Pasif</label></td>

                                }
                                <td><a href="/Writer/Default/AnnouncementDetail/@item.ID" class="btn btn-outline-primary">Detaylar</a></td>
                        </tr>
                        }
                      
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>